{
	"name": "meta3d",
	"private": true,
	"scripts": {
		"clean": "lerna clean && rm -rf node_modules yarn.lock",
		"install": "lerna bootstrap",
		"run:editor": "lerna run buildAll:ci --concurrency 1 && cd examples/use-editor && yarn webpack:dev-server ",
		"fastRun:editor": "cd examples/use-editor && yarn webpack:dev-server ",
		"ci:test": "lerna run test:ci --concurrency 1"
	},
	"workspaces": [
		"examples/*",
		"defaults/*",
		"extensions/*",
		"extension_protocols/*",
		"components/*",
		"component_protocols/*",
		"work_plugins/*",
		"work_plugin_protocols/*",
		"skin_protocols/*",
		"custom_control_protocols/*",
		"skins/*",
		"custom_controls/*",
		"elements/*",
		"element_protocols/*",
		"events/*",
		"event_protocols/*",
		"engine/*"
	],
	"config": {
		"commitizen": {
			"path": "node_modules/cz-customizable"
		}
	},
	"devDependencies": {
		"lerna": "^4.0.0"
	}
}